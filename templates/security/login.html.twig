{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" novalidate>
        <label for="username">{{ 'login.username'|trans }}</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />

        <label for="password">{{ 'login.password'|trans }}</label>
        <input type="password" id="password" name="_password" />

        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/admin" />
        #}
        <input type="hidden" name="_target_path" value="/admin" />

        <button type="submit">{{ 'login.connect'|trans }}</button>
    </form>
{% endblock %}
